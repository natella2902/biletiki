<%= form_for(@train) do |f| %>
    <%= render 'common/errors', resource: @train %>

  <div class="field">
    <%= f.label :number %><br>
    <%= f.text_field :number %>
  </div>

  <div class="field">
    <%= f.label :current_station, "Current station" %>
    <%= f.collection_select :current_station_id, RailwayStation.all, :id, :title %>
  </div>

  <div class="field">
    <%= f.label :route, "Route" %>
    <%= f.collection_select :route_id, Route.all, :id, :name %>
  </div>

    <div class="field">
      <%= f.label :wagon, "Wagon" %>
      <%= f.collection_select :wagon_id, Wagon.all, :id, :wagon_type %>
    </div>

  <div class="actions">
    <%= f.submit "#{ @train.new_record? ? 'Create' : 'Edit'}" %>
  </div>
<% end %>
