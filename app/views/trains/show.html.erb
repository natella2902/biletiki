<p id="notice"><%= notice %></p>

<p>
  <strong>Train number:</strong>
  <%= @train.number %>
</p>

<p>
  <strong>On Station:</strong>
  <% if @train.current_station.present?%>
    <%= @train.current_station.title %>
  <% else %>
    Not indicated
  <% end %>
</p>

<p>
  <strong>On Route:</strong>
  <% if @train.route.present?%>
      <%= @train.route.name %>
  <% else %>
      Not indicated
  <% end %>
</p>

<p>
  <strong>Вагоны</strong>
  <ul>
    <% @train.wagons.each do |car| %>
      <li> <%=link_to "Вагон №#{car.number}", car %> </li>
    <% end %>
  </ul>
</p>

<p>
  <%= link_to "Добавить вагон", new_train_wagon_path(@train) %>
</p>

<%= link_to 'Edit', edit_train_path(@train) %> |
<%= link_to 'Back', trains_path %>
